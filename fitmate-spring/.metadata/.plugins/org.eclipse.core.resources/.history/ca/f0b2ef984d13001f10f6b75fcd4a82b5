<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- 네임스페이스에 DAO 풀패키지명을 작성 -->
<mapper namespace="com.fitmate.community.model.dao.CommunityDao">
	
	<!-- 전체 게시글 조회 -->
	<select id="selectAll" resultType="community">
		SELECT id, title, content, writer, reg_date AS regDate, like_cnt AS likeCnt, view_cnt AS viewCnt, category, comment_cnt AS commentCnt, file
		FROM community;
	</select>
	
	<!-- 상세 게시글 조회 -->
	<select id="selectOne" resultType="community" parameterType="int">
		SELECT id, title, content, writer, reg_date AS regDate, like_cnt AS likeCnt, view_cnt AS viewCnt, category, comment_cnt AS commentCnt, file
		FROM community
		WHERE id = #{id};
	</select>
	
	<!-- 게시글 등록 -->
	<insert id="insertBoard" parameterType="Board" keyProperty="id" useGeneratedKeys="true">
		INSERT INTO board (title, content, writer, category)
		VALUES (#{title}, #{content}, #{writer}, #{category});
	</insert>

	<!-- 게시글 삭제  -->
	<delete id="deleteBoard" parameterType="int">
		DELETE FROM board
		WHERE id = #{id};
	</delete>
	
	<!-- 조회수 증가 -->
	<update id="updateViewCnt" parameterType="int">
		UPDATE board
		SET view_cnt = view_cnt+1
		WHERE id = #{id};
	</update>
	
	<!-- 게시글 수정 -->
	<!-- 만약에 날짜가 수정날짜 였다면 같이 수정해줘야된다. -->
	<update id="updateBoard" parameterType="Board">
		UPDATE board
		SET title = #{title}, content = #{content}, reg_date = now()
		WHERE id = #{id};
	</update>
	
	<!-- 검색기능 -->
	<select id="search"  resultType="board" parameterType="SearchCondition">
		SELECT id, content, writer, title, view_cnt, date_format(reg_date, '%y-%m-%d') AS reg_date 
		FROM board
		<!-- 동적쿼리(검색 조건) -->
		<if test="key != null">
			WHERE ${key} LIKE concat('%', #{word}, '%')
		</if>
		<!-- 동적쿼리(정렬 조건) -->
		<if test="orderBy != null">
			ORDER BY ${orderBy} ${orderByDir}
		</if>	
			
	</select>
	
	
	<insert id="insertFile" parameterType="Board">
		INSERT INTO files (file_id, file_name, board_id)
		VALUES (#{fileId},#{fileName},#{id})
	
	</insert>
	
	
	
	
	
</mapper>