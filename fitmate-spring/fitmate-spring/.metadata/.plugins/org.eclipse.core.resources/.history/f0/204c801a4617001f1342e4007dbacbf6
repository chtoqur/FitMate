<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 네임스페이스에 DAO 풀패키지명을 작성 -->
<mapper namespace="com.ssafy.fitmate.model.dao.UserDao">
	<select id="selectAll">
		SELECT id, name, nickname, email, age, fitness_level
		AS fitnessLevel, post_code AS postCode, address, liked_videos AS
		likedVideos, saved_routine AS savedRoutine
		FROM users
	</select>

	<insert id="insertUser" parameterType="User">
		INSERT INTO users
		VALUES
		(#{id}, #{password}, #{name}, #{nickname}, #{email}, #{age},
		#{fitnessLevel}, #{postCode}, #{address}, #{likedVideos},
		#{savedRoutine}, #{img})
	</insert>

	<select id="selectOne" parameterType="Map" resultType="User">
		SELECT id,
		name, nickname, email, age, fitness_level AS fitnessLevel, post_code
		AS postCode, address, liked_videos AS likedVideos, saved_routine AS
		savedRoutine, img
		FROM users
		WHERE id = #{id} AND password = #{password}
	</select>
	
	<select id="checkPassword" parameterType="Map" resultType="Integer">
		SELECT COUNT(*)
		FROM users
		WHERE id = #{id} AND password = #{password}
	</select>
	
	<update id="changePassword" parameterType="Map">
		UPDATE users
		SET password=#{password}
		WHERE id=#{id}
	</update>

	<update id="updateUser" parameterType="User">
		UPDATE users
		SET nickname=#{nickname}, age=#{age},
		fitness_level=#{fitnessLevel}, post_code=#{postCode},
		address=#{address}
		WHERE id = #{id}
	</update>

	<update id="updateLikedVideos" parameterType="user">
		UPDATE users
		SET liked_videos=#{likedVideos}
		WHERE id = #{id}
	</update>
	
	<update id="updateLikedCommunity" parameterType="user">
		UPDATE users
		SET liked_community=#{likedCommunity}	
		WHERE id = #{id}
	</update>

	<update id="updateSavedRoutine" parameterType="user">
		UPDATE users
		SET
		saved_routine=#{savedRoutine}
		WHERE id = #{id}
	</update>

	<update id="updateUserProfileImage">
		UPDATE users
		SET img = #{imageUrl}
		WHERE id = #{userId}
	</update>

	<select id="checkIdExists" parameterType="String"
		resultType="Integer">
		SELECT COUNT(*) FROM users WHERE id = #{id}
	</select>

	<select id="findById" parameterType="String" resultType="User">
		SELECT id, name, nickname, email, age, fitness_level AS fitnessLevel,
		post_code AS postCode, address, liked_videos AS likedVideos,
		saved_routine AS savedRoutine, img
		FROM users WHERE id = #{userId}
	</select>

</mapper>