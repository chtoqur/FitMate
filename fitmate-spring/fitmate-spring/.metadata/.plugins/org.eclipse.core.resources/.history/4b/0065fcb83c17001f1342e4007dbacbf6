<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- 네임스페이스에 DAO 풀패키지명을 작성 -->
<mapper namespace="com.ssafy.fitmate.model.dao.CommunityDao">
	
	<!-- 전체 게시글 조회 -->
	<select id="search" resultType="community">
		SELECT id, title, content, writer, reg_date AS regDate, like_cnt AS likeCnt, view_cnt AS viewCnt, category, comment_cnt AS commentCnt, file
		FROM community
		<if test="key != 'none'">
			WHERE ${key} LIKE concat('%', #{word}, '%')
		</if>
	</select>
	
	<!-- 상세 게시글 조회 -->
	<select id="selectOne" resultType="community" parameterType="int">
		SELECT id, title, content, writer, reg_date AS regDate, like_cnt AS likeCnt, view_cnt AS viewCnt, category, comment_cnt AS commentCnt, file
		FROM community
		WHERE id = #{id};
	</select>
	
	<!-- 게시글 등록 -->
	<insert id="insertPost" parameterType="Community">
		INSERT INTO community (title, writer, content, reg_date, like_cnt, view_cnt, category, comment_cnt, file)
		VALUES (#{title}, #{writer}, #{content}, now(), 0, 0, #{category}, 0, #{file});
	</insert>

	<!-- 게시글 삭제  -->
	<delete id="deletePost" parameterType="int">
		DELETE FROM community
		WHERE id = #{id};
	</delete>
	
	<!-- 게시글 수정 -->
	<update id="updatePost" parameterType="Community">
		UPDATE community
		SET title = #{title}, content = #{content}
		WHERE id = #{id};
	</update>
	
	<!-- 조회수 증가 -->
	<update id="updateViewCnt" parameterType="int">
		UPDATE community
		SET view_cnt = view_cnt+1
		WHERE id = #{id};
	</update>
	
	<!-- 검색기능 -->
	<select id="search"  resultType="Community" parameterType="SearchCondition">
		SELECT id, title, content, writer, reg_date AS regDate, like_cnt AS likeCnt, view_cnt AS viewCnt, category, comment_cnt AS commentCnt, file 
		FROM community
		<!-- 동적쿼리(검색 조건) -->
		<if test="key != null">
			WHERE ${key} LIKE concat('%', #{word}, '%')
		</if>
		<!-- 동적쿼리(정렬 조건) -->
		<if test="orderBy != null">
			ORDER BY ${orderBy} ${orderByDir}
		</if>
	</select>
	<!-- 
	<insert id="insertFile" parameterType="Community">
		INSERT INTO files (file_id, file_name, board_id)
		VALUES (#{fileId},#{fileName},#{id})
	</insert> -->
</mapper>