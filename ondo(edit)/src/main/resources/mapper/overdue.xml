<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace : 해당 mapper를 사용하는 DAO 정보 입력 -->
<mapper namespace="com.example.demo.overdue.OverdueDAO">

    <resultMap type="com.example.demo.overdue.OverdueTblVO" id="overdueMap">
        <result property="brCode"    column="BRCODE" />
        <result property="isbn"       column="ISBN" />
        <result property="title"     column="TITLE" />
        <result property="userId"     column="USERID" />
        <result property="dueDate"     column="DUEDATE" />
    </resultMap>

    <select id="selectOverdueUser" resultMap="overdueMap">
        SELECT * FROM OVERDUE_TBL WHERE USERID=#{userId} 
    </select>

</mapper>